<% provide(:title, "编辑用户") %>
<h1>更新帐户信息</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-0">
		<%= gravatar_for @user %>
	    <a href="http://gravatar.com/emails"><br>修改</a>
	</div>
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
		  <%= render 'fields', f: f %>

		  <%= f.submit "保存修改", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
