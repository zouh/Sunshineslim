<% provide(:title, '营养成分') %>
<h1>营养成分</h1>
<div class="form-group">
  <%= form_for(@nutrition_fact) do |f| %>
	<%= render 'fields', f: f %>
	<div class="row">
	  <div class="col-lg-1">
	    <strong>创建人：</strong>
	  </div>
	  <div class="col-lg-2">
	    <%= current_user.name %>
	  </div>
	  <div class="col-lg-3 col-lg-offset-6">
	    <%= f.submit "保存", class: "btn btn-large btn-primary" %>
	  </div>
	</div>
  <% end %>
</div>
<%= link_to '返回', nutrition_facts_path %>
