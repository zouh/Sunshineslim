<%= render 'shared/error_messages', object: f.object %>

<div class="row">
  <div class="col-lg-1">
    <%= f.label :code, '编码或条码：', class: "control-label" %>
  </div>
  <div class="col-lg-2">
    <%= f.text_field :code, class: "form-control" %>
  </div>
  <div class="col-lg-1">
    <%= f.label :name, '名称：', class: "control-label" %>
  </div>
  <div class="col-lg-8">
    <%= f.text_field :name, class: "form-control" %>
  </div>
<!--
  <div class="col-lg-3">
    <%= f.button '检查数据重复', class: "btn btn-block btn-warning" %>
  </div>
-->
</div>

<div class="row">
  <div class="col-md-1">
    <%= f.label :size, '重量或容量：', class: "control-label" %>
  </div>
  <div class="col-md-2">
    <%= f.text_field :size, class: "form-control" %>
  </div>
  <div class="col-lg-1">
    <%= f.label :serving_size, '每份重量或容量：', class: "control-label" %>
  </div>
  <div class="col-lg-2">
    <%= f.text_field :serving_size, class: "form-control" %>
  </div>
  <div class="col-md-1">
    <%= f.label :size_unit_id, '单位：', class: "control-label" %>
  </div>
  <div class="col-md-2">
    <%= f.select :size_unit_id, options_from_collection_for_select(Unit.where('id in (1, 2)'), :id, :name) %>
  </div>
  <div class="col-lg-1">
    <%= f.label :servings, '份数：', class: "control-label" %>
  </div>
  <div class="col-lg-2">
    <%= f.text_field :servings, class: "form-control" %>
  </div>
</div>

<table class="table table-striped table-bordered">
  <tr> 
    <th>项目<br>(Item)</th>
    <th>每份包含<br>(per Serving)</th>
    <th>单位<br>(Unit)</th>
    <th>营养素参考值 % <br>(NRV %)</th>
  </tr> 

  <tr> 
    <td>能量 <br>(Energy)</td>
    <td><%= f.text_field :energy, class: "form-control" %></td>
    <td>千焦(kJ)</td>
    <td><%= f.text_field :energy_percent, class: "form-control" %></td>
  </tr>

  <tr> 
    <td>蛋白质 <br>(Protein)</td>
    <td><%= f.text_field :protein, class: "form-control" %></td>
    <td>克(g)</td>
    <td><%= f.text_field :protein_percent, class: "form-control" %></td>
  </tr>

  <tr> 
    <td>脂肪 <br>(Fat)</td>
    <td><%= f.text_field :fat, class: "form-control" %></td>
    <td>克(g)</td>
    <td><%= f.text_field :fat_percent, class: "form-control" %></td>
  </tr>

  <tr> 
    <td>碳水化合物 <br>(Carbohydrate)</td>
    <td><%= f.text_field :carbohydrate, class: "form-control" %></td>
    <td>克(g)</td>
    <td><%= f.text_field :carbohydrate_percent, class: "form-control" %></td>
  </tr>

  <tr> 
    <td>盐 <br>(Sodium)</td>
    <td><%= f.text_field :sodium, class: "form-control" %></td>
    <td>毫克(mg)</td>
    <td><%= f.text_field :sodium_percent, class: "form-control" %></td>
  </tr>
</table>




 